  "main": "backend/api/index.js",
  "scripts": {
    "start": "node backend/api/index.js",
    "server": "npm start --prefix backend",
    "client": "npm run dev --prefix frontend",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "build": "npm run build --prefix frontend",
    "build:server": "cross-env NODE_ENV=production node backend/api/index.js",
    "deploy": "npm run build && npm run start",
    "install:all": "npm install && npm install --prefix backend && npm install --prefix frontend",
    "data:import": "npm run data:import --prefix backend",
    "product": "npm run product --prefix backend",
    "generate-password": "npm run generate-password --prefix backend",
    "lint:client": "npm run lint --prefix frontend",
    "type-check:client": "npm run type-check --prefix frontend",
    "test": "echo \"No root level tests specified. Run tests in backend/frontend folders.\" && exit 1"
  },
  "keywords": [
    "mern",
    "ecommerce",
    "react",
    "nextjs",
    "node",
    "express",
    "mongodb",
    "fullstack"
  ],
